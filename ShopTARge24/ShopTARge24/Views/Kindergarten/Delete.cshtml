@model ShopTARge24.Models.Kindergarten.KindergartenDeleteViewModel

<h1>Delete</h1>

<div>
	<h4>Kindergarten</h4>
	<hr />
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Nr" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Nr)
		</div>
	</dl>

	<dl class="row">
		<div class="form-group row">
			<label asp-for="Id" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(model => model.Id)
		</div>

		<dl class="row">
			<div class="form-group row">
				<label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
				@Html.DisplayFor(model => model.GroupName)
			</div>
		</dl>
		<dl class="row">
			<div class="form-group row">
				<label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
				@Html.DisplayFor(model => model.ChildrenCount)
			</div>
		</dl>

		<dl class="row">
			<div class="form-group row">
				<label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
				@Html.DisplayFor(model => model.KindergartenName)
			</div>
		</dl>

		<dl class="row">
			<div class="form-group row">
				<label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
				@Html.DisplayFor(model => model.TeacherName)
			</div>
		</dl>

	</dl>

	<hr />
	<form asp-action="DeleteConfirmation">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" />
	</form>

	@if (Model.Images != null && Model.Images.Any())
	{
		<div class="row mt-3">
			@foreach (var image in Model.Images)
			{
				<div class="col-md-3 mb-3">
					<img src="@image.Image" alt="@image.ImageTitle" class="img-thumbnail" />
					<p class="text-center">@image.ImageTitle</p>
				</div>
			}
		</div>
	}
	else
	{
		<p>No images available.</p>
	}
	<a asp-action="Index" asp-controller="kindergarten" class="btn btn-success">Back</a>

</div>