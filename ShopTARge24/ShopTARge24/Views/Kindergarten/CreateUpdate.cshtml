@model ShopTARge24.Models.Kindergarten.KindergartenCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form asp-action="@(Model.Id.HasValue ? "Update" : "Create")"
          asp-controller="Kindergarten"
          method="post"
          enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Nr" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Nr" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="GroupName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="GroupName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ChildrenCount" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ChildrenCount" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="KindergartenName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="KindergartenName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="TeacherName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TeacherName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Files" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-5">
                <div class="custom-file">
                    <input asp-for="Files" multiple type="file" class="form-control" />
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-success">
            @(Model.Id.HasValue ? "Update" : "Create")
        </button>
        <a asp-action="Index" asp-controller="Kindergarten" class="btn btn-secondary">Back</a>
    </form>

    @if (Model.Id.HasValue && Model.Images != null && Model.Images.Any())
    {
        <hr />
        <div class="row mt-3">
            @foreach (var image in Model.Images)
            {
                <div class="col-md-4 mb-4 text-center">
                    <img src="@image.Image" alt="@image.ImageTitle" class="img-thumbnail" />

                    <div class="small mt-1">@image.ImageTitle</div>

                    <form asp-action="RemoveImage"
                          asp-controller="Kindergarten"
                          asp-route-imageId="@image.ImageId"
                          asp-route-kindergartenId="@Model.Id"
                          method="post"
                          class="mt-2">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                onclick="return confirm('Delete this image?');">
                            Delete image
                        </button>
                    </form>
                </div>
            }
        </div>
    }
    else
    {
        <p>No images available.</p>
    }
</div>